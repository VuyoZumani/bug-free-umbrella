<Window x:Class="OutOfYourLeague.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutOfYourLeague"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="username:" HorizontalAlignment="Left" Margin="85,138,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.309,1.662" Height="29" Width="115"/>
        <Label Content="password:" HorizontalAlignment="Left" Margin="85,215,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="327,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <PasswordBox Name="password"  HorizontalAlignment="Left" Margin="327,215,0,0" VerticalAlignment="Top" Height="26" Width="158"/>
        <Button x:Name="signup" Content="Sign up" HorizontalAlignment="Left" Margin="85,325,0,0" VerticalAlignment="Top" Width="140" Height="32" RenderTransformOrigin="-0.595,0.812" Click="signup_Click"/>
        <Button x:Name="signin" Content="Sign in" HorizontalAlignment="Left" Margin="345,325,0,0" VerticalAlignment="Top" Width="140" Height="32" Click="signin_Click"/>

    </Grid>
</Window>
