<Window x:Class="OutOfYourLeague.Fixtures"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutOfYourLeague"
        mc:Ignorable="d"
        Title="Fixtures" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="fixtures" HorizontalAlignment="Left" Height="257" Margin="25,35,0,0" VerticalAlignment="Top" Width="428"/>
        <Button x:Name="updateLeague" Content="Update Standings" HorizontalAlignment="Left" Margin="141,326,0,0" VerticalAlignment="Top" Width="150" Height="64" Click="Button_Click" RenderTransformOrigin="-0.32,0.739"/>
        <ComboBox Name="weeks" HorizontalAlignment="Left" Margin="518,35,0,0" VerticalAlignment="Top" Width="174" SelectionChanged="weeks_SelectionChanged">
            <ComboBoxItem Content="Week 1"/>
            <ComboBoxItem Content="Week 2"/>
            <ComboBoxItem Content="Week 3"/>
            <ComboBoxItem Content="Week 4"/>
            <ComboBoxItem Content="Week 5"/>
            <ComboBoxItem Content="Week 6"/>
            <ComboBoxItem Content="Week 7"/>
            <ComboBoxItem Content="Week 8"/>
            <ComboBoxItem Content="Week 9"/>
            <ComboBoxItem Content="Week 10"/>
            <ComboBoxItem Content="Week 11"/>
            <ComboBoxItem Content="Week 12"/>
            <ComboBoxItem Content="Week 13"/>
            <ComboBoxItem Content="Week 14"/>
        </ComboBox>

    </Grid>
</Window>
