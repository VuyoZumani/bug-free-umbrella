<Window x:Class="OutOfYourLeague.TopGoalScorers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutOfYourLeague"
        mc:Ignorable="d"
        Title="TopGoalScorers" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="topgoalscorers" HorizontalAlignment="Left" Height="268" Margin="10,10,0,0" VerticalAlignment="Top" Width="710"/>
        <Button x:Name="main" Content="Home" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="199" Height="27" Click="main_Click"/>
        <Button x:Name="standings" Content="Standings" HorizontalAlignment="Left" Margin="255,300,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="standings_Click"/>
        <Button x:Name="fixtures" Content="Fixtures" HorizontalAlignment="Left" Margin="520,300,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="fixtures_Click"/>
        <Button x:Name="addplayer" Content="Add player" HorizontalAlignment="Left" Margin="230,349,0,0" VerticalAlignment="Top" Width="251" Height="44" Click="addplayer_Click"/>

    </Grid>
</Window>
